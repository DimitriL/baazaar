<div class="row">
  <div class="medium-12 columns">
    {{ form_start(form, {'action': path('baazaar_baazaar_ad_bid', {'id' : ad.id}), 'method': 'POST'}) }}
         {{ form_errors(form) }}
         <div class="row">
           <div class="medium-9 columns">
             {{ form_rest(form) }}
           </div>
           <div class="medium-3 columns">
             <input class="button" type="submit" value="Bied">
           </div>
         </div>
    {{ form_end(form) }}
  </div>
</div>
<div class="row">
  <div class="medium-12 columns">
    <table class="table table--bids">
      {% for bid in ad.bids %}
          <tr>
            <td>{{ bid.createdAt|date('d M Y') }}</td>
